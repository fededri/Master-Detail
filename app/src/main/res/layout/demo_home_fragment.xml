<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D35151">

    <TextView
        android:id="@+id/demo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Demo home fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button_go_to_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to details"
        app:layout_constraintEnd_toEndOf="@+id/demo_text"
        app:layout_constraintStart_toStartOf="@+id/demo_text"
        app:layout_constraintTop_toBottomOf="@+id/demo_text" />

</androidx.constraintlayout.widget.ConstraintLayout>